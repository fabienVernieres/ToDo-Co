{% extends 'base.html.twig' %}

{% block title %}Tâches{% endblock %}

{% block body %}
    <h1>Tâches</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ task.id }}</td>
            </tr>
            <tr>
                <th>Créée le</th>
                <td>{{ task.createdAt ? task.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ task.title }}</td>
            </tr>
            <tr>
                <th>Contenu</th>
                <td>{{ task.content }}</td>
            </tr>
            <tr>
                <th>Accomplie</th>
                <td>{{ task.isDone ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Utilisateur</th>
                <td>{{ task.user.username }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_task_index') }}">Retour à la liste</a>

    <a href="{{ path('app_task_edit', {'id': task.id}) }}">Modifier</a>

    {{ include('task/_delete_form.html.twig') }}
{% endblock %}
