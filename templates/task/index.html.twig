{% extends 'base.html.twig' %}

{% block title %}Liste des tâches{% endblock %}

{% block body %}
    <h1>Liste des tâches</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Créée le</th>
                <th>Titre</th>
                <th>Contenu</th>
                <th>Accomplie</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for task in tasks %}
            <tr>
                <td>{{ task.id }}</td>
                <td>{{ task.createdAt ? task.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ task.title }}</td>
                <td>{{ task.content }}</td>
                <td>{{ task.isDone ? 'Oui' : 'Non' }}</td>
                <td>
                    <a href="{{ path('app_task_show', {'id': task.id}) }}">voir</a>
                    <a href="{{ path('app_task_edit', {'id': task.id}) }}">modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">Aucune tâche actiellement</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_task_new') }}">Ajouter une tâche</a>
{% endblock %}
